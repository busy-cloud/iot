{
  "title": "空间",
  "template": "table",
  "toolbar": [
    {
      "label": "创建",
      "icon": "plus",
      "type": "button",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "space-create"
      }
    }
  ],
  "operators": [
    {
      "icon": "eye",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "space-detail",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "icon": "edit",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "space-edit",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "icon": "delete",
      "title": "删除",
      "confirm": "确认删除？",
      "action": {
        "type": "script",
        "script": "this.request.get('iot/space/'+data.id+'/delete').subscribe(res=>{this.load()})"
      }
    }
  ],
  "columns": [
    {
      "key": "id",
      "label": "ID",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "space-detail",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "key": "parent_id",
      "label": "父空间ID",
      "action": {
        "type": "page",
        "app": "iot",
        "page": "space-detail",
        "params_func": "return {id: data.parent_id}"
      }
    },
    {
      "key": "name",
      "label": "名称"
    },
    {
      "key": "description",
      "label": "说明"
    },
    {
      "key": "disabled",
      "label": "禁用",
      "type": "boolean"
    },
    {
      "key": "created",
      "label": "日期",
      "type": "date"
    }
  ],
  "search_api": "iot/space/search",
  "mount": "if(this.params.project_id)this.filter.project_id=this.params.project_id; if(this.params.parent_id)this.filter.parent_id=this.params.parent_id"
}